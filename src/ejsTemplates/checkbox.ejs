<div class="form-check <%= typeof classList == 'undefined' ? "" : classList %>" title="<%= typeof item.desc == 'undefined' ? "" : item.desc %>">
    <input class="form-check-input" type="checkbox" id="<%= item.id %>" value="option2">
    <% if (item.err) { %>
        <div class="invalid-feedback"><%= item.err %></div>
    <% } %>
    <label class="form-check-label" for="<%= item.id %>"><%= item.name %></label>
    <% if (item.desc) { %>
        <div class="form-text d-inline"><%= item.desc %></div>
    <% } %>
</div>
